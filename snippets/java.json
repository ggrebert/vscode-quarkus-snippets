        ],
        "description": "Filter logging for Quarkus",
        "body": [
            "package ${1:packagename};",
            "",
            "import java.io.IOException;",
            "import javax.ws.rs.container.ContainerRequestContext;",
            "import javax.ws.rs.container.ContainerRequestFilter;",
            "import javax.ws.rs.core.Context;",
            "import javax.ws.rs.core.UriInfo;",
            "import javax.ws.rs.ext.Provider;",
            "",
            "import org.slf4j.Logger;",
            "import org.slf4j.LoggerFactory;",
            "",
            "@Provider",
            "public class LoggingFilter implements ContainerRequestFilter {",
            "",
            "\tprivate static final Logger LOGGER = LoggerFactory.getLogger(LoggingFilter.class);",
            "",
            "\t@Context",
            "\tUriInfo info;",
            "",
            "\t@Override",
            "\tpublic void filter(ContainerRequestContext requestContext) throws IOException {",
            "\t\tfinal String method = requestContext.getMethod();",
            "\t\tfinal String path = info.getPath();",
            "",
            "\t\tLOGGER.info(\"Request {} {}\", method, path);$0",
            "\t}",
            "",
            "}",
            "",
        ]
