    "Quarkus error mapper": {
        "prefix": [
            "q-mapper-error",
        ],
        "description": "Exception Mapper",
        "body":[
            "package ${1:packagename};",
            "",
            "import javax.json.Json;",
            "import javax.ws.rs.WebApplicationException;",
            "import javax.ws.rs.core.Context;",
            "import javax.ws.rs.core.Response;",
            "import javax.ws.rs.core.UriInfo;",
            "import javax.ws.rs.ext.ExceptionMapper;",
            "import javax.ws.rs.ext.Provider;",
            "",
            "import org.slf4j.Logger;",
            "import org.slf4j.LoggerFactory;",
            "",
            "import io.vertx.core.http.HttpServerRequest;",
            "",
            "@Provider",
            "public class ErrorMapper implements ExceptionMapper<Exception> {",
            "",
            "\tprivate static final Logger LOGGER = LoggerFactory.getLogger(ErrorMapper.class);",
            "",
            "\t@Context",
            "\tUriInfo info;",
            "",
            "\t@Context",
            "\tHttpServerRequest request;",
            "",
            "\t@Override",
            "\tpublic Response toResponse(Exception exception) {",
            "\t\tint code = 500;",
            "",
            "\t\tif (exception instanceof WebApplicationException) {",
            "\t\t\tcode = ((WebApplicationException) exception).getResponse().getStatus();",
            "\t\t}",
            "",
            "\t\tfinal String method = request.rawMethod();",
            "\t\tfinal String path = request.path();",
            "",
            "\t\tLOGGER.error(\"Request {} {} {} {}\", method, path, code, exception.getMessage(), exception);",
            "",
            "\t\treturn Response.status(code)",
            "\t\t\t\t.entity(",
            "\t\t\t\t\t\tJson.createObjectBuilder()",
            "\t\t\t\t\t\t\t\t.add(\"error\", exception.getMessage())",
            "\t\t\t\t\t\t\t\t.add(\"code\", code)$0",
            "\t\t\t\t\t\t\t\t.build()",
            "\t\t\t\t)",
            "\t\t\t\t.build();",
            "\t}",
            "}",
            "",
        ]
    },
    "Quarkus logging filter": {
        "prefix":[
